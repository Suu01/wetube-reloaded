doctype html
html(lang="ko")
    //- head
    //-     block head
    head 
        title #{pageTitle} | Wetube
        link(link rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header 
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}
            nav
                ul 
                    if fakeUser.loggedIn
                        li 
                            a(href="/logout") Logout
                    else
                        li 
                            a(href="/login") Login
            h1=pageTitle
        main
            block content
    include partials/footer.pug
    